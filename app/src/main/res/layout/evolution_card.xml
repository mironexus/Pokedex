<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/evolution_pokemon_container"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/language_picker_rounded"
        android:paddingTop="6dp"
        android:paddingBottom="26dp"
        android:paddingHorizontal="8dp">


    <ImageView
        android:id="@+id/evolution_card_pokemon_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_logo_android"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/evolution_card_evolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/evolution_card_pokemon_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/abilities_label"
        android:textSize="10sp"
        android:textColor="@color/coldGray"
        />

    <TextView
        android:id="@+id/evolution_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/evolution_card_evolution"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/hidden_ability"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/evolution_card_first_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/evolution_card_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/evolution_card_second_type"
        android:layout_marginTop="4dp"
        android:text="GRASS"
        android:textColor="@color/surface1"
        android:textSize="10sp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp"
        android:background="@drawable/type_button_rounded"
        />

    <TextView
        android:id="@+id/evolution_card_second_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/evolution_card_name"
        app:layout_constraintStart_toEndOf="@id/evolution_card_first_type"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="POISON"
        android:textColor="@color/surface1"
        android:textSize="10sp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp"
        android:background="@drawable/type_button_rounded"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@id/evolution_pokemon_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="4dp">

        <TextView
            android:id="@+id/evolution_card_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/evolution_card_arrow"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Lv 16"
            android:textSize="14sp"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/evolution_card_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_icons_android_ic_arrow_back"
            android:rotation="270"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>






